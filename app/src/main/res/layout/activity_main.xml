<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="400sp"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/d"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_columnSpan="4"
            android:padding="15dp"
            android:layout_row="1"
            android:textAlignment="textEnd"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/team_a_sco"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:padding="15dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/team_a_plu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="3"
            android:onClick="Add"
            android:text="+"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/team_a"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:text="Team A Score"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/team_a_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="Subtract"
            android:text="-"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:padding="15dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/team_b_sco"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_columnSpan="4"

            android:padding="15dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/team_b_plu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="3"
            android:onClick="Add"
            android:text="+"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/team_b"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:text="Team B Score"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/team_b_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:onClick="Subtract"
            android:text="-"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="10"
            android:layout_rowSpan="1"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:padding="15dp"
            android:textAlignment="textEnd"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="11"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:padding="15dp"
            android:textSize="24sp"
            android:text="Increase or Decrease by"
            android:textAlignment="center"/>

        <RadioGroup
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_row="12"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:orientation='horizontal'>

            <RadioButton
                android:id="@+id/one"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="One"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/two"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:text="Two"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/three"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:text="Three"
                android:textAlignment="center" />
        </RadioGroup>
    </GridLayout>
</RelativeLayout>